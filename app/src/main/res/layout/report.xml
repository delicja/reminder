<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate report for:"
            android:padding="20dp"/>
        <RadioGroup android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <RadioButton
                android:text="Today"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/todayRadioBtn"
                android:checked="true"/>
            <RadioButton
                android:text="Last week"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/lastWeekRadioBtn"/>
            <RadioButton
                android:text="Last Month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/lastMonthRadioBtn"/>
            <RadioButton
                android:text="Custom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/customRadioBtn"/>
        </RadioGroup>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate report"
            android:layout_marginLeft="110dp"
            android:paddingTop="10dp"
            android:id="@+id/generateReportButton"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:id="@+id/selectCustomDatePanel"
            android:visibility="invisible">
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Start date..."
                    android:id="@+id/startDateEditText"
                    android:enabled="false"
                    android:width="200dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectStartDateButton"
                    android:text="Select"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="End date..."
                    android:id="@+id/endDateEditText"
                    android:enabled="false"
                    android:width="200dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectEndDateButton"
                    android:text="Select"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reportPanel"
                android:visibility="invisible">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Report:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="10"
                    android:inputType="textMultiLine"
                    android:id="@+id/reportContentTextView"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>